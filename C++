//this program determines leap years
#include <iostream>

int main() {
  int year;
  std::cout << "Please Enter a year: \n";
  std::cin >> year;
  if ((year%4 == 0 && year%100 != 0) or year % 400 ==0 ){
    std::cout << "This " << year <<  " is a leap year\n";
  }
    else{
     std::cout << "This " << year << " is not a leap year\n";
  
  }
  
}
